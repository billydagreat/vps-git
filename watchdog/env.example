# Watchdog .env -- copy to watchdog/.env and fill in your values.
# Or deploy via: ansible-playbook watchdog.yml

# URL to check primary Forgejo health (via Cloudflare tunnel or direct)
PRIMARY_HEALTH_URL=https://git.example.com/api/healthz

# SSH keys on the HOST that can reach each VPS node
SSH_KEY_PRIMARY=/path/to/primary_ssh_key
SSH_KEY_STANDBY=/path/to/standby_ssh_key

# How often to check (seconds)
CHECK_INTERVAL=30

# How many consecutive failures before triggering failover
FAIL_THRESHOLD=3

# Uptime Kuma admin credentials (used by setup-kuma on first run)
KUMA_USERNAME=admin
KUMA_PASSWORD=CHANGEME

# NetBird/WireGuard IPs for port monitors (Postgres, SSH)
PRIMARY_NETBIRD_IP=100.x.x.x
STANDBY_NETBIRD_IP=100.y.y.y
